/*
Possible Animations:
enter
leave
appear Must set transitionAppear={true} on animation component
*/

.order-enter
  //background red
  transition all 0.5s
  transform translateX(-120%)
  max-height 0
  padding 0 !important
  &.order-enter-active
    //background blue
    max-height 60px
    padding 2rem 0 !important
    transform translateX(0)

.order-leave
  transition all 0.5s
  transform translateX(0)
  &.order-leave-active
    max-height 0px
    padding 0 !important
    transform translateX(120%)

.count-enter
  transition all .25s
  transform translateY(100%) // start off screen
  &.count-enter-active
    font-weight bold !important
    color red
    transform translateY(0) // put in default location

.count-leave
  transition all .25s
  position absolute
  left 0
  bottom 0
  transform translateY(0) // start it where it is
  &.count-leave-active
    transform translateY(-100%) // start it where it is
